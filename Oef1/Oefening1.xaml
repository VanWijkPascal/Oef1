<Window x:Class="Oef1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oef1"
        mc:Ignorable="d"
        Title="Oefening1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Header="Data" Grid.Row="0" Margin="21,10,314,10">
            <Grid Height="400">
                <Label x:Name="lblFirstname" Content="Firstname:" HorizontalAlignment="Center" Margin="0,17,0,357" Width="130"></Label>
                <Label x:Name="lblLastname" Content="Lastname:" HorizontalAlignment="Center" Margin="0,78,0,296" Width="130" ></Label>
                <TextBox x:Name="txtFirstname" HorizontalAlignment="Left" Margin="162,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="txtLastname" HorizontalAlignment="Center" Margin="0,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top" Width="130" Height="13"  FontSize="10" Click="btnSend_Click" Padding="0,0,0,0"/>
            </Grid>

        </GroupBox>

        <GroupBox Header="Resume" Margin="21,24,301,86" Grid.Row="2" Grid.Column="1">
            <TextBox x:Name="txtResume" VerticalAlignment="Top" TextWrapping="Wrap" Height="68" HorizontalAlignment="Left" Width="126"/>
        </GroupBox>

    </Grid>
</Window>
